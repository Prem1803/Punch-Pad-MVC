@model PunchPad.Models.PremEmployee

@{
    ViewData["Title"] = "Register";
}


<div class="row div-center">
    <div class="col-sm-12">
        <div class="card">
            <form asp-action="Register" class="card-body cardbody-color p-md-4">

            <h2 class="text-center text-dark">Register</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p class="text-danger">@ViewBag.RegisterError</p>
                <div class="mb-3">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Department" class="form-control" placeholder="Department"/>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Doj" class="control-label text-dark mb-1"></label>
                <input asp-for="Doj" class="form-control" type="date" placeholder="Date of Joining"/>
                <span asp-validation-for="Doj" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="ManagerId" class="control-label text-dark mb-1">Manager</label>
                <select asp-items="@ViewBag.Managers" class="form-control"  asp-for="ManagerId" aria-placeholder="Manager">
                    <option selected></option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
                <div class="mb-3">
                    <input asp-for="Username" type="text" placeholder="User Name" class="form-control" required/>
                     <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" type="password" placeholder="password" class="form-control" required/>
                     <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Register" class="btn btn-color px-5 mb-2 w-100" />
                </div>
                <div class="form-text text-center text-dark">
                    Have an Account? <a asp-controller="Employee" asp-action="Login">Login</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
